## setting-up
git config --global user.name maverickoo
git config --global user.email billnosdname@gmail.com
git config credential.helper store
git push http://example.com/repo.git

## git tag
git tag <tag_name>
git push origin <tag_name>

## git flow
git flow init
git flow feature start MYFEATURE
## local merge
git flow feature finish MYFEATURE
## to remote
git flow feature publish MYFEATURE

git flow release start RELEASE
git flow release publish RELEASE
git flow release finish RELEASE

## create a new branch from an existing branch 
git checkout -b <newbranch> <baseBranch>

## copy a file from another branch
git checkout <source branch> <file>

## show remote URL
git remote show origin

## show commit log
git log

## manual branch merge
git checkout <target>
git merge <source>

## undo a file-add
git reset <file>

# git branch ops
git branch -help

## rename a local branch
git branch -m <Old> <New>

## rename a remote branch
git branch -m old_branch new_branch
git push -u origin new_branch
git push origin --delete old_branch

## remove a local branch
git branch -d <BranchName> or git branch -D <BranchName>

## remove a remote branch
git push origin --delete <BranchName>

# git push
git push -help

## fetch origin branch
git fetch
git checkout newBranch

## tag ##
git tag <tag_name>
git push origin <tag_name>

## rebase a branch ##
git checkout <target>
git rebase <source>

## archieve repo ##
git archive ...

## checkin files with extension
git status | grep modified | egrep '\.c$|\.h$|\.mk.in$|\.ac$|\.am$|\.in$|*Makefile$' | awk -F ' ' '{print $3}' | xargs git add

## Add a upstream repo to local repo  ##
git remote add upstream <UpstreamRepo>

